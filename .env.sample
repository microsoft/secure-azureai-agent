#############################################
# Unified Environment Configuration Sample  #
# (Copy to .env and edit)                   #
#############################################

######## Core (Required) ########
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

######## Mode / Feature Flags ########
# Enable Azure AI Foundry agent mode (true/false)
USE_AZURE_AI_AGENT=false
PROJECT_ENDPOINT=https://your-project-resource.services.ai.azure.com/api/projects/firstProject
FOUNDARY_TECHNICAL_SUPPORT_AGENT_ID=your-agent-id

######## Telemetry / Tracing ########
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://your-instrumentation-endpoint
SEMANTICKERNEL_EXPERIMENTAL_GENAI_ENABLE_OTEL_DIAGNOSTICS_SENSITIVE=true
AZURE_TRACING_GEN_AI_CONTENT_RECORDING_ENABLED=true
LOG_LEVEL=INFO

######## Runtime / Network ########
ENVIRONMENT=development
PORT=8000
FRONTEND_URL=http://localhost:8501
ALLOWED_HOST=localhost
BACKEND_API_URL=http://localhost:8000

######## Azure Dev Meta ########
AZURE_ENV_NAME=dev
AZURE_LOCATION=eastus

######## Key Vault (Production) ########
# KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

######## Optional Auth Overrides ########
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_TENANT_ID=your-tenant-id

######## Notes ########
# - For variable meanings see CONFIGURATION.md
# - In production set tracing *_SENSITIVE / CONTENT_RECORDING to false
# - Use Key Vault for all secrets above

